<!--index.wxml-->
<view>
    <view class = "body">
        <view class = "headerviewwxss" bindtap = "headerviewclick">
            <text class = "headertextwxss">{{headertext}}</text>
        </view>
        <loading hidden = "{{hiddenLoading}}">加载中...</loading>
        <block wx:for = "{{listDataArray}}">   
            <view class = "cellwxss" bindtap = "languageviewclick" data-hi = "1">
                <view class = "viewwxss">
                    <text class = "titlewxss">{{index + 1}}. {{item.name}}</text>
                    <text class = "starwxss">Star:{{item.stargazers_count}}</text>
                </view>
                <view class = "viewwxss">
                    <image src="{{item.owner.avatar_url}}" class = "imagewxss"></image>
                    <text class = "ownerwxss">Owner: {{item.owner.login}}</text>
                </view>
                <view class = "viewwxss">
                    <text class = "descriptionwxss">{{item.description}}</text>
                </view>
            </view> 
        </block>
        
    </view>
</view>
